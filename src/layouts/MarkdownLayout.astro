---
import BaseLayout from "@layouts/BaseLayout.astro";
const { title } = Astro.props.frontmatter;
---

<BaseLayout>
    <section>
        <div class="container mx-auto px-5 py-10 lg:py-20 max-w-[65ch]">
            <h1 class="text-text font-bold text-5xl text-center">{title}</h1>
            <div class="prose mx-auto mt-16 marker:text-text">
                <slot />
            </div>
        </div>
    </section>
</BaseLayout>
