---
interface Feature {
    heading: string;
    subheading: string;
    icon: string;
}
const { icon, heading, subheading } = Astro.props.feature as Feature;
---

<div class="flex flex-col items-start relative md:even:top-12 max-w-sm group">
    <div
        class="p-6 rounded-3xl bg-neutral-200/50 aspect-square grid place-items-center"
    >
        <i class={`${icon} fa-3x text-violet-400`}></i>
    </div>
    <h3 class="text-xl lg:text-2xl font-bold mt-4">
        {heading}
    </h3>
    <p class="text-base lg:text-lg mt-1">
        {subheading}
    </p>
</div>
