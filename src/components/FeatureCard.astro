---
interface Feature {
    heading: string;
    subheading: string;
    image: string;
}
const { image, heading, subheading } = Astro.props.feature as Feature;
---

<div class="flex flex-col items-start relative md:even:top-12 max-w-sm">
    <img src={image} alt="" class="h-24" />
    <h3 class="text-xl lg:text-2xl font-bold mt-8">
        {heading}
    </h3>
    <p class="text-base lg:text-lg mt-1">
        {subheading}
    </p>
</div>
