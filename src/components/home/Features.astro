---
import features from "@data/features.json";
import FeatureCard from "@components/FeatureCard.astro";
---

<section class="mt-4">
    <div class="container mx-auto px-5 py-10 lg:py-20">
        <h2 class="text-text font-bold text-5xl text-center mx-auto">
            Products
        </h2>
        <div
            class="grid justify-center sm:grid-cols-2 lg:grid-cols-4 mt-20 lg:mt-24 gap-16"
        >
            {features.map((feature) => <FeatureCard {feature} />)}
        </div>
    </div>
</section>
