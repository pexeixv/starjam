---
import BaseLayout from "@layouts/BaseLayout.astro";
const contactLinks = [
    {
        icon: "fab fa-whatsapp",
        text: "+91 9657451879",
        href: "tel:+919657451879",
    },
    {
        icon: "fab fa-instagram",
        text: "@starjam_in",
        href: "//instagr.am/starjam_in",
    },
    {
        icon: "fas fa-at",
        text: "starjam.india@gmail.com",
        href: "mailto:starjam.india@gmail.com",
    },
    {
        icon: "fas fa-location-dot",
        text: "Plot 12, 24/2B <br/> Sainath Nagar<br/> Wadgaonsheri<br/>Pune - 411014",
        href: "https://goo.gl/maps/mYaCYYV5thpL6WWF9",
    },
];
---

<BaseLayout title="Contact">
    <section>
        <div class="container mx-auto px-5 py-10 lg:py-20 max-w-5xl">
            <h1 class="text-text font-bold text-5xl">Contact</h1>
            <div
                class="flex flex-col-reverse lg:flex-row justify-between mt-16 gap-16"
            >
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3849.122029716128!2d73.92752997504994!3d15.26113966056406!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bbfb474a0080377%3A0xd9376af1d94f12a8!2sMaria%20Hall!5e0!3m2!1sen!2sin!4v1687950347409!5m2!1sen!2sin"
                    class="w-full rounded-2xl overflow-hidden shadow-lg lg:w-2/3"
                    height="450"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
                <div class="lg:w-1/3 flex flex-col gap-8">
                    {
                        contactLinks.map((link) => (
                            <a href={link.href} class="flex gap-2 group w-fit">
                                <i class={`${link.icon} text-xl`} />
                                <p class="underline decoration-transparent group-hover:decoration-inherit transition-colors duration-300">
                                    <Fragment set:html={link.text} />
                                </p>
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
